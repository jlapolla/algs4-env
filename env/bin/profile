#!/usr/bin/env dash

PROFILER_HOME="$VIRTUAL_ENV/tools/honest-profiler"
LOG_FILE="$PROFILER_HOME/log.hpl"

# https://github.com/jvm-profiling-tools/honest-profiler/wiki/How-to-Run
java -agentpath:"$PROFILER_HOME/liblagent.so"=interval=7,logPath="$LOG_FILE" "$@"
cd "$PROFILER_HOME"
./gui
rm "$LOG_FILE"

