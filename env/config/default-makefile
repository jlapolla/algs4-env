FILES := $(patsubst %.java,%,$(wildcard *.java))

.PHONY: javac
javac: $(addsuffix .class,$(FILES))

.PHONY: checkstyle
checkstyle:
	checkstyle-algs4 .

.PHONY: findbugs
findbugs: $(addsuffix .class,$(FILES))
	findbugs-algs4 .

.PHONY: all
all: javac checkstyle findbugs

%.class: %.java
	javac -encoding UTF-8 -Xlint:all $<

.DEFAULT_GOAL := javac

