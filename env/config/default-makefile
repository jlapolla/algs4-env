FILES := $(patsubst %.java,%,$(wildcard *.java))

.PHONY: javac
javac: $(addsuffix .class,$(FILES))

.PHONY: checkstyle
checkstyle:
	checkstyle-algs4 .

.PHONY: findbugs
findbugs: $(addsuffix .class,$(FILES))
	findbugs-algs4 .

.PHONY: test
test: $(addsuffix .class,$(FILES)) Test.class
	java Test

.PHONY: all
all: javac checkstyle findbugs

.PHONY: clean
clean:
	rm -f *.class

%.class: %.java
	javac -encoding UTF-8 -Xlint:all $<

.DEFAULT_GOAL := javac

